{
    "name": "cyrilmarchand/semantic-suggestion-solr",
    "version": "1.0.0",
    "type": "typo3-cms-extension",
    "description": "TYPO3 extension for suggesting semantically related content using Solr More Like This (MLT)",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Cyril Marchand",
            "email": "cyril.wolfangel@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^13.4",
        "typo3/cms-extbase": "^13.4",
        "typo3/cms-fluid": "^13.4",
        "apache-solr-for-typo3/solr": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "CyrilMarchand\\SemanticSuggestionSolr\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "semantic_suggestion_solr"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    }
}
